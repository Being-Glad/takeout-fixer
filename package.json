{
  "name": "photo-takeout-fixer-pro",
  "version": "1.0.0",
  "description": "Restore dates, locations, and descriptions to your Google Takeout photos.",
  "main": "main.js",
  "author": "Being_Glad",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "exiftool-vendored": "^18.4.0",
    "fs-extra": "^11.1.1",
    "p-limit": "3.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.4.0",
    "electron": "^25.3.1"
  },
  "build": {
    "appId": "com.beingglad.phototakeoutfixer",
    "productName": "PhotoTakeout Fixer",
    "artifactName": "PhotoTakeout-Fixer-${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "preload.js",
      "app.html",
      "assets/",
      "node_modules/"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.photography",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}