{
  "name": "takeout-date-fixer",
  "productName": "Takeout Date Fixer",
  "homepage": "https://github.com/Being-Glad/takeout-fixer",
  "version": "1.0.0",
  "description": "Fixes metadata and dates for Google Takeout photos and videos.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "google photos",
    "takeout",
    "metadata",
    "exif",
    "fixer"
  ],
  "author": "Being_Glad",
  "license": "MIT",
  "dependencies": {
    "exiftool-vendored": "^28.3.0"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.beingglad.takeoutdatefixer",
    "productName": "Takeout Date Fixer",
    "artifactName": "Takeout-Date-Fixer.${ext}",
    "publish": null,
    "files": [
      "**/*",
      "build/icon.png",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,LICENSE,LICENSE.txt}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.flowconfig,.yarn-metadata.json,.idea,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity,.yarn-clean}"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.photography",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}