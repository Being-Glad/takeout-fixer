{
  "name": "takeout-date-fixer",
  "productName": "Takeout Date Fixer",
  "version": "1.0.0",
  "description": "Restore EXIF dates and metadata to Google Takeout photos.",
  "main": "main.js",
  "scripts": { "start": "electron .", "dist": "electron-builder" },
  "author": "Being_Glad",
  "license": "MIT",
  "devDependencies": { "electron": "^28.0.0", "electron-builder": "^24.9.0" },
  "dependencies": { "exiftool-vendored": "^25.0.0" },
  "build": {
    "appId": "com.takeout.datefixer",
    "productName": "Takeout Date Fixer",
    "publish": null,
    "directories": { "buildResources": "assets" },
    "files": [ "**/*", "!dist", "!node_modules/.cache" ],
    "mac": { "target": "dmg", "artifactName": "Takeout-Date-Fixer.dmg" },
    "win": { "target": "nsis", "artifactName": "Takeout-Date-Fixer.exe" },
    "linux": { "target": "AppImage", "category": "Utility", "artifactName": "Takeout-Date-Fixer.AppImage" }
  }
}